package game.display.Screens{	import flash.display.MovieClip;	import flash.events.Event;		import core.baseObject;		import game.Global;
	public class baseScreen extends baseObject	{		protected  var m_internalName:String;				public function baseScreen( )		{			m_internalName = "baseScreen";				addEventListener( Event.ADDED_TO_STAGE  , onAdd , false , 0 , true );		}  				protected function onAdd( event:Event ):void{  			removeEventListener( Event.ADDED_TO_STAGE  , onAdd );						}  				/**		 * поднимаем отображение после загрузки основных данных получаемых с сервера / картинки дальше можно сливать асинхронно 		 * 		 */			protected function onCompleteLoad( ):void{			Global.managerScreen.HideWaitScreen( );		}				public function get Name( ):String{ 			return m_internalName;    		}					}}